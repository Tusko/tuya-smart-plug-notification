  "license": "Apache-2.0",
  "dependencies": {
    "dayjs": "^1.11.13",
    "hono": "^4.11.4",
    "humanize-duration": "^3.32.1",
    "short-uuid": "^5.2.0"
  },
  "devDependencies": {
    "wrangler": "^4.45.0"
  }
}
