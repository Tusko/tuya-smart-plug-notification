{
  "name": "smart-plug-cloudflare",
  "version": "1.0.0",
  "description": "Tuya Smart Plug monitoring with Cloudflare Workers and Hono",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "wrangler dev -e=dev",
